@model testeMvc.Models.Cliente
@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center md-2 pb-2">
    <form asp-action="index" class="form-control">
        <div class="col-6">
            <div class="form-group">

                <input asp-for="NomeCliente" class="form-control col-4" placeholder="Pesquisar" />

               @* @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-4", placeholder = "Pesquisar" })*@

            </div>
            <div class="form-group">
               @* @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control col-4", placeholder = "Digite o seu telefone" })*@

                <button type="submit" class="btn btn-primary">Ir</button>
            </div>
    </form>
</div>
<div class="col-12 border border-1"></div>
<div class="container mt-2 pt-2">

    @if (!string.IsNullOrEmpty(@ViewBag.Mensagem))
    {
        <p>@ViewBag.Mensagem</p>
    }
       
    @if(ViewBag.DadosCliente != null)
    {
        <input class="form-control m-2" name="Nome" id="Nome" value=@ViewBag.DadosCliente.NomeCliente>
        <input class="form-control" name="Telefone" id="Telefone" value=@ViewBag.DadosCliente.TelefoneCliente>
    }

</div>


